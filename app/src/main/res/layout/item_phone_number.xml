<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="@dimen/value_5dp">

    <ImageView
        android:id="@+id/item_iv_call"
        android:layout_width="@dimen/value_20dp"
        android:layout_height="@dimen/value_20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_phone"
        android:backgroundTint="@color/colorPrimary" />

    <TextView
        android:id="@+id/item_tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/value_10dp"
        android:textSize="@dimen/value_14sp"
        app:layout_constraintStart_toEndOf="@id/item_iv_call"
        app:layout_constraintTop_toTopOf="@id/item_iv_call" />

</androidx.constraintlayout.widget.ConstraintLayout>
