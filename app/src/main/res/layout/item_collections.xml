<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vhbgcollections"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvcollections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/value_10dp"
        android:layout_marginBottom="@dimen/value_10dp"
        android:gravity="bottom"
        android:maxLines="5"
        android:minLines="2"
        android:textColor="#fff"
        android:textSize="@dimen/value_30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="collection  text" />

</androidx.constraintlayout.widget.ConstraintLayout>